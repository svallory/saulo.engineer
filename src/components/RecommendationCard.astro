---
const { img, name, linkedin, role } = Astro.props
---

<figure class="bg-patt-broken-noise-light overflow-hidden rounded-2xl shadow-lg ring-1 ring-gray-900/5">
  <blockquote class="p-6 text-gray-900">
    <slot />
  </blockquote>
  <figcaption class="bg-patt-lines flex items-center gap-x-4 border-t border-gray-900/10 p-4">
    <img class="h-10 w-10 rounded-full bg-gray-50" src={`/images/${img}`} alt={name} />
    <div>
      <div class="font-semibold">
        <a class="linkedin" href={`https://www.linkedin.com/in/${linkedin}`}>
          {name}
          <svg
            class="inline"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            id="linkedin-bug-medium"
            aria-hidden="true"
            role="none"
            data-supported-dps="24x24"
            fill="currentColor">
            <path
              d="M20.5 2h-17A1.5 1.5 0 002 3.5v17A1.5 1.5 0 003.5 22h17a1.5 1.5 0 001.5-1.5v-17A1.5 1.5 0 0020.5 2zM8 19H5v-9h3zM6.5 8.25A1.75 1.75 0 118.3 6.5a1.78 1.78 0 01-1.8 1.75zM19 19h-3v-4.74c0-1.42-.6-1.93-1.38-1.93A1.74 1.74 0 0013 14.19a.66.66 0 000 .14V19h-3v-9h2.9v1.3a3.11 3.11 0 012.7-1.4c1.55 0 3.36.86 3.36 3.66z"
            ></path>
          </svg>
        </a>
      </div>
      <div class="text-xs text-gray-600">{role}</div>
    </div>
  </figcaption>
</figure>
