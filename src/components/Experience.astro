---
const { logo, role, company, descriptor, fromDate, toDate, blue, dark, red, green, yellow, indigo, purple, pink } = Astro.props
---

<li>
  <div class="relative pb-8">
    <!-- <span class="absolute left-5 top-5 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span> -->
    <div class="relative flex items-start space-x-3">
      <div class="relative">
        <img class="m-2 h-20 w-20 rounded-md object-contain ring-current" src={`/images/logos/${logo}`} alt="" />
      </div>
      <div class="min-w-0 flex-1">
        <div>
          <div class="mb-4 mt-1 text-sm">
            <h4>{role}</h4>
            <span class="text-lg">
              {company}
              {descriptor && <small style="padding-left: 20px; font-weight: normal; font-style: italic">{descriptor}</small>}
            </span>
            {(fromDate || toDate) && <p class="mt-0.5 text-gray-100">{fromDate} - {toDate}</p>}
          </div>
          <div class="hidden">
            <span
              class="me-2 rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-300 dark:bg-blue-900 dark:text-blue-300"
              >{blue}</span
            >
            <span
              class="me-2 rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-300 dark:bg-gray-700 dark:text-gray-300"
              >{dark}</span
            >
            <span
              class="me-2 rounded-full bg-red-100 px-2.5 py-0.5 text-xs font-medium text-red-300 dark:bg-red-900 dark:text-red-300"
              >{red}</span
            >
            <span
              class="me-2 rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-300 dark:bg-green-900 dark:text-green-300"
              >{green}</span
            >
            <span
              class="me-2 rounded-full bg-yellow-100 px-2.5 py-0.5 text-xs font-medium text-yellow-300 dark:bg-yellow-900 dark:text-yellow-300"
              >{yellow}</span
            >
            <span
              class="me-2 rounded-full bg-indigo-100 px-2.5 py-0.5 text-xs font-medium text-indigo-300 dark:bg-indigo-900 dark:text-indigo-300"
              >{indigo}</span
            >
            <span
              class="me-2 rounded-full bg-purple-100 px-2.5 py-0.5 text-xs font-medium text-purple-300 dark:bg-purple-900 dark:text-purple-300"
              >{purple}</span
            >
            <span
              class="me-2 rounded-full bg-pink-100 px-2.5 py-0.5 text-xs font-medium text-pink-300 dark:bg-pink-900 dark:text-pink-300"
              >{pink}</span
            >
          </div>
          <div class="mt-2 text-sm leading-relaxed text-gray-200">
            <slot />
          </div>
        </div>
      </div>
    </div>
  </div>
</li>
