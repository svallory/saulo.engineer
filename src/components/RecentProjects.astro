---
import IconLink from './IconLink.astro'

const { img, name, readMore, github, blue, green, yellow, purple } = Astro.props
---

<li class="background-dark rounded-xl border border-zinc-800 p-4 relative">
  <img class="aspect-[14/13] w-full rounded-2xl object-cover" src={`/images/${img}`} alt={name} />
  <h3 class="mt-6 text-lg font-semibold leading-8 tracking-tight text-white">{name}</h3>
  <p class="text-base leading-7 text-gray-300">
    <slot />
  </p>
  <div class="min-h-28">
    <div class="bottom-0 absolute mb-4" style="width: 350px; height:112px">
      <p class="mt-8 mb-8 text-gray-500 text-center">
        <a
        href={readMore}
        class="button-black noise-light rounded-md bg-white text-sm px-2.5 py-2 font-semibold text-gray-900 shadow-sm hover:bg-gray-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
        target="_blank"
        >
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" class="inline button-black mb-1"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="3"><path d="M11 5H5V19H19V13"/><path d="M13 11L20 4"/><path d="M21 3H15M21 3V9"/></g></svg>
         Read More</a>
        <a
        href=`https://github.com/${github}`
        class="button-black noise-light rounded-md bg-white text-sm ml-4 px-6 py-2 font-semibold text-gray-900 shadow-sm hover:bg-gray-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
        target="_blank"
        >
        <svg viewBox="0 0 14 14" width="14px" height="14px" aria-label="Github" class="inline button-black mb-1.5"><path d="M7 0a7 7 0 0 0-2.21 13.64c.35.06.48-.15.48-.33L5.26 12c-1.76.32-2.21-.43-2.35-.83-.08-.2-.43-.82-.72-.99-.25-.13-.6-.45-.01-.46.55 0 .94.5 1.07.72.63 1.06 1.64.76 2.04.58.07-.46.25-.77.45-.94-1.56-.18-3.19-.78-3.19-3.46 0-.76.28-1.39.72-1.88-.07-.17-.31-.9.07-1.85 0 0 .59-.19 1.93.71a6.5 6.5 0 0 1 3.5 0c1.34-.9 1.92-.71 1.92-.71.39.96.14 1.68.07 1.85.45.5.72 1.11.72 1.88 0 2.69-1.64 3.28-3.2 3.46.26.22.48.64.48 1.3l-.01 1.92c0 .18.13.4.48.33A7.01 7.01 0 0 0 7 0Z"></path></svg>
         Github</a>
      </p>
      <p class="text-sm leading-6 text-gray-500">
        <span
          class="me-2 rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800 dark:bg-blue-900 dark:text-blue-300"
          >{blue}</span
        >
        <span
          class="me-2 rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800 dark:bg-green-900 dark:text-green-300"
          >{green}</span
        >
        <span
          class="me-2 rounded-full bg-yellow-100 px-2.5 py-0.5 text-xs font-medium text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300"
          >{yellow}</span
        >
        <span
          class="me-2 rounded-full bg-purple-100 px-2.5 py-0.5 text-xs font-medium text-purple-800 dark:bg-purple-900 dark:text-purple-300"
          >{purple}</span
        >
      </p>
    </div>
  </div>
</li>
