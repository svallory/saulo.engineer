    year: 2018,
    imgUrl: '/images/logos/crossover-logo.svg',
    company: 'Crossover',
    role: 'Product Chief Architect',
  },
  {
    year: 2019,
    imgUrl: '/images/logos/rocket-money-logo.webp',
    company: 'Rocket Money',
    role: 'Senior Architect',
  },
  {
    year: 2022,
    imgUrl: '/images/logos/cva-logo.svg',
    company: 'Toki Labs | CVA',
    role: 'CTO',
