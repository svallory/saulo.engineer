<script>
  document.addEventListener('DOMContentLoaded', () => {
    const hoverEffectItems = document.querySelectorAll('.hover-effect');

    hoverEffectItems.forEach((item: HTMLElement) => {
      item.addEventListener('mousemove', (e: MouseEvent) => {
        const rect = (e.currentTarget as Element).getBoundingClientRect();
        const x = e.clientX - rect.left; // x position within the element.
        const y = e.clientY - rect.top;  // y position within the element.

        item.style.setProperty('--cursor-x', `${x}px`);
        item.style.setProperty('--cursor-y', `${y}px`);
      });

      // Reset style on mouse leave for smooth transition out
      // item.addEventListener('mouseleave', () => {
      //   item.style.setProperty('--cursor-x', '50%');
      //   item.style.setProperty('--cursor-y', '50%');
      // });
    });
  });
</script>
